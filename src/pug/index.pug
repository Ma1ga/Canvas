doctype html
html(lang="uk")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="css/styles.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
        title ЗМІНИ ЦЕ!!!
    body 
        include helpers/vars.pug
        include helpers/mixins.pug

        include components/header.pug

        main
            .main-wrapper 
                .main
                    .canvas-container
                        img.canvas-image(src="img/canvas-img.png", alt="Холст")
                    .options-container
                        form.options-form
                            h2 Виберіть розмір
                            .size-options
                                label
                                    input(type="radio" name="size" value="30x30")
                                    span 30x30
                                label
                                    input(type="radio" name="size" value="30x90")
                                    span 30x90
                                label
                                    input(type="radio" name="size" value="90x120")
                                    span 90x120
                                label
                                    input(type="radio" name="size" value="90x150")
                                    span 90x150
                                button(type="button") Підрахувати

                            .custom-size
                                label
                                    input(type="number" placeholder="Ширина")
                                span x
                                label
                                    input(type="number" placeholder="Висота")
                                button(type="button") Підрахувати

                            h3 Додаткові опції
                            .extra-options
                                label
                                    input(type="checkbox")
                                    span Дорожче полотно
                                label
                                    input(type="checkbox")
                                    span З рамкою
                                label
                                    input(type="checkbox")
                                    span З доставкою (Нова Пошта)

                            .total
                                .buy-main
                                    button.buy-button(type="submit") Придбати
                                .price-main
                                    span.total-price 345 грн



        include components/footer.pug
